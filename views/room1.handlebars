                        <div id="positiveBtn7">
                            <a class="button secondary" id="posBtn3" for="positive" type="submit" name="posBtn" href="/foyer/1">OK
                            </a>
                        </div>
                        {{!-- neg show 1.8 --}}
                        <div id="negativeBtn7">
                            <a class="button secondary" id="negBtn3" for="negative" type="submit"
